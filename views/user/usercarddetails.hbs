<div class="container">
    <div class="row">
        <div class="col-md-4 text-warning">
            {{>playCard this}}
            <br>
            <a class="btn btn-orange" href="/profile">Back</a>
        </div>
        <div class="col-md-8">
            <ul class="ulInfo">
                <li class="text-white liInfo"><span>Name: </span>{{name}}</li>
                {{#if colors}}
                <li class="text-white liInfo"><span>Color: </span>{{colors}}</li>
                {{/if}}
                <li class="text-white liInfo rules"><span>Description: </span>{{text}}</li>
                {{#if manaCost}}
                <li class="text-white liInfo">
                    <span>Mana cost: </span>
                    {{#each manaCost}}
                        <img class="imgMana" src="{{this}}" alt="manaImg">
                    {{/each}}
                </li>
                {{/if}}
                {{#if rulings}}
                <li class="text-white liInfo rules">
                    <span>Rulings: </span>
                    <ul>
                        {{#each rulings}}
                            <li>
                                <small class="text-warning">{{date}}</small>
                                <br>
                                <p>{{text}}</p>
                            </li>
                        {{/each}}
                    </ul>
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>