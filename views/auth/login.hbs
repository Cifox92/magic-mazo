<div class="row justify-content-center">
    <div class="col-md-6 ">

        <h1 class="font-weight-bold text-white">Inicio de sesión</h1>

        <form action="/login" method="POST">
            <div class="form-group">
                <label for="field1" class="font-weight-bold text-white">Nombre de usuario</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2" class="font-weight-bold text-white">Contraseña</label>
                <input name="password" type="password" class="form-control" id="field2">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Iniciar sesión</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}

        </form>

        <p class="font-weight-bold text-dark">¿No tienes cuenta? <a class="text-white" href="/signup">¡Regístrate!</a></p>
    </div>
</div>