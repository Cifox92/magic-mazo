<div class="row justify-content-center">
    <div class="col-md-6">

        <h1 class="font-weight-bold text-warning">Registro</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1" class="font-weight-bold text-warning">Nombre de usuario</label>
                <input name="username" type="text" class="form-control" id="field1" placeholder="Esto es un viaje de tripi">
            </div>
            <div class="form-group">
                <label for="field2" class="font-weight-bold text-warning">Contraseña</label>
                <input name="password" type="password" class="form-control" id="field2" placeholder="Aceptamos pulpo">
                <small class="form-text text-muted">Nunca compartas tu contraseña</small>
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Registrarme</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p class="font-weight-bold text-success">¿Tienes cuenta? <a class="text-warning" href="/login">¡Inicia sesión!</a></p>
    </div>
</div>