<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 back-trans">

            <h1 class="text-body">Search Cards</h1>

            <form action="/main/cardlist" method="post">
                <div class="form-group">
                    <label for="name" class="text-white">Name</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>

                <button type="submit" class="btn btn-info">Search!</button>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        {{#each cards}}
            {{>playCard this}}
        {{/each}}
    </div>
</div>


<script type="text/javascript" src="routes/main.routes.js"></script>