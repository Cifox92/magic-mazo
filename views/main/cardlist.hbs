<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 back-trans">

            <h1 class="text-body text-warning">Search Cards</h1>

            <form action="/main/cardlist" method="post">
                <div class="form-group">
                    <label for="name" class="text-white">Name</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>

                <button type="submit" class="btn btn-info">Search!</button>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        {{#each cards}}
            <div class="col-md-3 card background">
                <a href="/main/cardlist/{{id}}" class="markup-center text-warning"> 
                {{>playCard this}}
                </a> 
                <a id="add-{{id}}" class="btn btn-primary markup-center" href="/main/cardlist/{{id}}/selected">Add it to your collection</a>
            </div>
        {{/each}}
    </div>
</div>


<script type="text/javascript" src="routes/main.routes.js"></script>